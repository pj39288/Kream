<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.doongie.kream.goods.dao.GoodsDAO">
	
	<insert id="insertGoods" parameterType="map">
	
		INSERT INTO
			`model`
		(
			`brand`
			, `modelNumber`
			, `modelEnglishName`
			, `modelKoreanName`
			, `launchDate`
			, `mainColor`
			, `launchPrice`
			, `imagePath`
			, `category`
			, `gender`
			, `createdAt`
			, `updatedAt`
		)
		VALUE
		(
			#{brand}
			, #{modelNumber}
			, #{modelEnglishName}
			, #{modelKoreanName}
			, #{launchDate}
			, #{mainColor}
			, #{launchPrice}
			, #{imagePath}
			, #{category}
			, #{gender}
			, now()
			, now()
		)
	
	</insert>
	
	<select id="selectGoodsList" resultType="com.doongie.kream.goods.model.Goods">
	
		SELECT 
			`id`
			,`brand`
			, `modelNumber`
			, `modelEnglishName`
			, `modelKoreanName`
			, `launchDate`
			, `mainColor`
			, `launchPrice`
			, `imagePath`
			, `category`
			, `gender`
			, `createdAt`
			, `updatedAt`
		FROM
			`model`
		WHERE 
			`category` = #{category}		

	</select>

</mapper>